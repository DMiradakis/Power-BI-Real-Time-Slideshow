{
  "name": "Power BI Real-Time Slideshow",
  "manifest_version": 2,
  "version": "2.3.0",
  "description": "Display Power BI Reports as refreshing, rotating slideshows in the Power BI Service (old UI mode only).",

  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },

  "permissions": [
    "activeTab",
    "clipboardWrite",
    "tabs",
    "*://app.powerbi.com/*",
    "declarativeContent",
    "storage"
  ],

  "content_security_policy": "script-src 'self' https://code.jquery.com/jquery.min.js https://getbootstrap.com/dist/js/bootstrap.js https://getbootstrap.com/dist/css/bootstrap.css; object-src 'self'",

  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  },

  "page_action": {
    "default_icon": "img/Power_BI_Icon_Reduced_2.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": [ "*://app.powerbi.com/*" ],
      "js": [ "jquery-3.4.1.js", "angular.min.js", "content.js", "jquery-mutation-summary.js", "mutation-summary.js" ]
    }
  ]
}
