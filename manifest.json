{
  "name": "Power BI Real-Time Slideshow",
  "manifest_version": 2,
  "version": "2.0",
  "description": "Power BI Real-Time Slideshow",
  "options_page": "options.html",

  "icons": {
    "19": "img/Power_BI_Icon_Reduced_2.png"
  },

  "browser_action": {
    "default_icon": "img/Power_BI_Icon_Reduced_2.png"
  },
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "tabs",
    "http://*/*",
    "https://*/*",
    "declarativeContent",
    "storage"
  ],

  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": [ "http://*/*", "https://*/*" ],
      "js": [ "jquery-2.2.0.min.js", "angular.min.js", "content.js" ]
    }
  ]

}
